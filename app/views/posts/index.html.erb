<% @page_title = '投稿一覧' %>

<header>
  <nav>
    <ul class="clearfix">
      <li><i class="fab fa-facebook-square fa-2x"></i></li>
      <li><input type="text" placeholder="検索"></li>
      <li><input type="submit" value="検索"></li>
      <li><img src="images/dive_into_code.png" alt="山田太郎" class="user-icon cover30"></li>
      <li class="user-name">山田太郎</li>
    </ul>
  </nav>
</header>

<div class="container">
<p><%= notice %></p>

<% @posts.each do |post| %>
  <div class="main-content">
      <div class="content-header clearfix">
        <p><img src="images/dive_into_code.png" alt="" class="user-icon cover50"></p>
        <div class="ct-l">
          <p>山田太郎</p>
          <p class="created_at"><%= post.created_at %></p>
        </div>
        <div class="ct-r">
          <%= link_to '詳細', post_path(post) %> |
          <%= link_to '編集', edit_post_path(post) %> |
          <%= link_to '削除', post_path(post), method: :delete,
                  data: { confirm: '削除してもいいですか？' } %>
        </div>
      </div>

      <div class="content-sentence">
        <p>
          <%= post.content %>
        </p>
      </div>
      <p class="content-image">
        <%= image_tag post.image.url %>
      </p>

      <div class="content-footer">
        <div class="content-footer-top clearfix">
          <ul>
            <li class="content-footer-top-l"><i class="far fa-thumbs-up fa-lg"></i>10</li>
            <div class="li-right">
              <li class="content-footer-top-r">コメント10件</li>
              <li class="content-footer-top-r">シェア5件</li>
            </div><!-- /.li-right -->
          </div>
        <div class="content-footer-bottom clear-fix">
          <ul>
            <li><a href=""><i class="far fa-thumbs-up fa-lg"></i>いいね！</a></li>
            <li><a href=""><i class="far fa-comment-alt fa-lg"></i>コメント</a></li>
            <li><a href=""><i class="far fa-share-square fa-lg"></i>シェアする</a></li>
          </ul>
        </div>
      </div>
  </div><!-- /.main-content -->
    <% end %>
</div><!-- /.container -->