<div class="login-form">
  <%= form_with scope: :session, url: sessions_path, local: true do |f| %>
    <table>
      <thead>
        <tr>
          <th><%= f.label :email, 'メールアドレス', class: 'login-label' %>
          <th><%= f.label :password, 'パスワード', class: 'login-label pass' %>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= f.text_field :email, class: 'top-in-field h-email' %>
          <td><%= f.password_field :password, class: 'top-in-field h-password' %>
          <td><%= f.submit 'ログイン', class: 'login-btn' %>
        </tr>
      </tbody>
    </table>
  <% end %><!-- /form_with -->
</div><!-- /.login-form -->
